{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "index.js",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": "Dto.ts",
          "controllerFileNameSuffix": "Controller.ts",
          "introspectComments": true
        }
      }
    ]
  }
}
